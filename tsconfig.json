{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
